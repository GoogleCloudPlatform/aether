module Sampler;

import Types;

pub struct SamplingParameters {
    temperature: Float,
    top_k: Int,
    top_p: Float,
    repetition_penalty: Float,
}

pub struct SamplerState {
    seed: Int,
}

pub trait Sampler {
    func sample(self: &Self, logits: Array<Float>, params: &SamplingParameters, state: &mut SamplerState) -> Types.GenerationToken;
}