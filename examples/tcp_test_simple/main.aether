(DEFINE_MODULE
  (NAME tcp_test_simple)
  (INTENT "Simple TCP test - just listen and exit")
  (CONTENT
    ; Declare external functions
    (DECLARE_EXTERNAL_FUNCTION
      (NAME printf)
      (LIBRARY "libc")
      (RETURNS INTEGER)
      (ACCEPTS_PARAMETER (NAME "format") (TYPE STRING)))
    
    (DECLARE_EXTERNAL_FUNCTION
      (NAME tcp_listen)
      (LIBRARY "aether_runtime")
      (RETURNS INTEGER)
      (ACCEPTS_PARAMETER (NAME "port") (TYPE INTEGER)))
    
    (DECLARE_EXTERNAL_FUNCTION
      (NAME tcp_close)
      (LIBRARY "aether_runtime")
      (RETURNS VOID)
      (ACCEPTS_PARAMETER (NAME "socket_id") (TYPE INTEGER)))
    
    (DEFINE_FUNCTION
      (NAME main)
      (INTENT "Simple TCP listen test")
      (RETURNS INTEGER)
      (BODY
        (CALL_FUNCTION printf "Starting TCP test...\n")
        
        ; Create server socket on port 9999
        (DECLARE_VARIABLE (NAME "server_fd") (TYPE INTEGER))
        (ASSIGN 
          (TARGET_VARIABLE server_fd)
          (SOURCE_EXPRESSION (CALL_FUNCTION tcp_listen 12345)))
        
        (CALL_FUNCTION printf "tcp_listen returned: %d\n" server_fd)
        
        (IF_CONDITION
          (PREDICATE_LESS_THAN server_fd 0)
          (THEN_EXECUTE
            (CALL_FUNCTION printf "Failed to create listener\n")
            (RETURN_VALUE 1))
          (ELSE_EXECUTE
            (CALL_FUNCTION printf "Listener created successfully\n")))
        
        (CALL_FUNCTION printf "Closing listener...\n")
        (CALL_FUNCTION tcp_close server_fd)
        (CALL_FUNCTION printf "Done\n")
        (RETURN_VALUE 0)
      )
    )
  )
)